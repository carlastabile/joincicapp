<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/schedule_icon"
        android:layout_toEndOf="@+id/schedule_icon">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hora de inicio"
            android:id="@+id/schedule_start_hour"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/schedule_end_hour"
            android:layout_toStartOf="@+id/schedule_end_hour" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Titulo de la ponencia"
            android:textStyle="bold"
            android:id="@+id/schedule_title"
            android:padding="5dp"
            android:layout_below="@+id/schedule_start_hour"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre del ponente"
            android:id="@+id/schedule_presenter_name"
            android:padding="5dp"
            android:layout_below="@+id/schedule_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hora fin"
            android:id="@+id/schedule_end_hour"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/schedule_icon"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_presenter"/>

</RelativeLayout>

